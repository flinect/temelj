{
  "tasks": {
    "test": "deno test --doc",
    "lint": "deno lint && deno fmt --check",
    "clean": "deno run --allow-env --allow-read --allow-write --allow-run ./scripts/clean.ts",
    "update-versions": "deno run --allow-env --allow-read --allow-write=./lib,./packages --allow-net ./scripts/update_versions.ts",
    "npm:build": "deno run --allow-env --allow-read --allow-write --allow-net ./scripts/npm_build.ts"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "dom"]
  },
  "exclude": ["npm"],
  "publish": {
    "exclude": [
      "scripts",
      "npm",
      "deno.lock",
      ".github",
      ".vscode",
      ".zed",
      "**/*/package.json",
      "**/*.test.ts"
    ],
    "include": ["README.md", "LICENSE"]
  },
  "lint": {
    "rules": {
      "include": [
        "camelcase",
        "no-sync-fn-in-async-fn",
        "single-var-declarator",
        "verbatim-module-syntax",
        "no-console",
        "explicit-function-return-type"
      ]
    }
  },
  "workspace": [
    "./lib",
    "./packages/array",
    "./packages/color",
    "./packages/handlebars",
    "./packages/id",
    "./packages/iterator",
    "./packages/math",
    "./packages/request",
    "./packages/result",
    "./packages/string",
    "./packages/value"
  ]
}
